{% extends 'base.html.twig' %}

{% block title %}‚úç Writings // {{ author }}{% endblock %}
{% block header_image %}
    <img class="h-full w-full object-cover" src="{{ unsplash('writing', 1600, 300) }}">
{% endblock %}

{% block sub_profile %}
    <div class="text-center">
        <h2 class="inline-block text-gray-800 text-2xl font-semibold">Writings</h2>
    </div>
{% endblock %}
{% block body %}
    <div class="flex flex-col items-center">
        <div class="w-full sm:max-w-3xl mb-4">
            <div class="bg-gray-100 mt-4 sm:rounded overflow-hidden shadow">
                {% for article in articles %}
                    {{ include('article/line.html.twig', [article]) }}
                {% endfor %}
            </div>
        </div>
        {{ include('_partials/back_home.html.twig') }}
    </div>
{% endblock %}
